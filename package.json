{
  "name": "workspace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "node --inspect src/index.ts",
    "dev:debug": "node  --inspect-brk -r tsconfig-paths/register src/index.ts",
    "dev:watch": "ts-node-dev -r tsconfig-paths/register --inspect --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "husky install",
    "commit": "git-cz",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "typecheck": "tsc --noEmit",
    "debug": "node --inspect-brk -r ts-node/register src/api.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@types/conventional-commits-parser": "^5.0.1",
    "@types/lodash": "^4.17.16",
    "@types/swagger-ui-express": "^4.1.8",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.29.1"
  }
}
